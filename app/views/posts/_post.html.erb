<div class='mt-10'>
  <div class="border border-white bg-card rounded-lg p-4 lg:h-110 lg:flex-row lg:card-side shadow-xl md:w-84 lg:w-96 mx-auto flex flex-1 flex-col md:flex-row ">
  <div class="w-full md:w-1/3  grid place-items-center mb-4 md:mb-0">
    <%= image_tag('logo.png', class: ' rounded-lg object-cover', alt: 'デフォルトサムネイル画像') %>
  </div>
    <div class="justify-between items-center">
        <div class="items-center">
            <p class="text-black font-bold text-sm ml-1"><%= post.genre_i18n %></p>
        </div>
        <%= link_to post.location_name,  class: "font-bold text-gray-800 md:text-2xl text-xl" %>
        <p class="md:text-base text-gray-500 text-sm"><%= t('.address')%> <%=post.address %></p>
        <p class="md:text-sm text-gray-600 text-base"><%= post.description.truncate(50) %></p>
        <div  class='text-right text-xs mt-3 mb-3'>
                <span class='border-b border-gray-600'><%= t('.see_in_detail') %></span>    
        </div>
    </div>
  </div>
</div>
