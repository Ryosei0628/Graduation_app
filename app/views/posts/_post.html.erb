<div class=" mt-10 mb-5 mx-5">
  <div class="card flex-row lg:card-side bg-card rounded-lg shadow-xl mx-auto md:w-84 lg:w-96">
    <div class="flex flex-col items-stretch">
      <div class="my-3 mx-3 flex-shrink-0">
          <div class="flex items-center justify-items-center">
            <% if post.post_image.present? %>
              <%= image_tag post.post_image.url, style: 'width: 100px; height: 100px;' ,class: 'object-cover rounded-lg', alt: "サムネイル画像" %>
            <% else %>
              <%= image_tag('logo.png', style: 'width: 100px; height: 100px;' ,class: 'rounded-lg object-cover', alt: 'デフォルトサムネイル画像') %>
            <% end %>
            <div class="flex flex-col ml-5 w-2/5">
              <p class="text-black font-bold text-sm w-full truncate"><%= post.genre_i18n %></p>
              <p class="font-bold text-gray-800 text-base w-full"><%= post.location_name %></p>
              <p class="md:text-base text-gray-500 text-sm w-full" style="white-space: nowrap; word-wrap: break-word;" title="<%= post.address %>"><%= t('.address') %> <%= post.address.truncate(10) %></p>
            </div>
          </div>
      </div>

      <div class="flex justify-between mb-3 mx-3">
        <div class="flex">
          <div class="flex ml-2 items-center">
            <i class="fa-solid fa-circle-user"></i>
            <p class="text-left ml-2 mr-2 w-auto"><%= post.user.username %></p>
            <% if current_user.own?(post) %>
            <div class='ms-auto'>
              <%= link_to edit_post_path(post) do%>
                <i class="fa-solid fa-pencil"></i>
              <% end %>
              <%= link_to post_path(post),data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') } do %>
              <i class="fa-solid fa-trash"></i>
              <% end %>
            </div>
          <% end %>
          </div>
        </div>
        <div class="flex items-center">
          <span class="text-xs">
            <%= link_to t('.see_in_detail'), post_path(post), class: 'border-b border-gray-600' %>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>

