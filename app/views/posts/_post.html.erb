<div class='mt-10'>
        <div class="flex flex-col mb-5 md:flex-row md:space-x-5 space-y-3 md:space-y-0 rounded-xl shadow-lg p-3 max-w-xs md:max-w-3xl mx-auto border border-white bg-white">
            <div class="flex justify-between items-center">
                <div class="items-center">
                    <p class="text-black font-bold text-sm ml-1"><%= post.genre_i18n %></p>
                </div>
            </div>
            <%= link_to post.location_name,  class: "font-bold text-gray-800 md:text-2xl text-xl" %>
            <p class="md:text-base text-gray-500 text-sm">住所：<%= post.address %></p>
            <p class="md:text-lg text-gray-600 text-base"><%= post.description.truncate(50) %></p>
        </div>
    </div>
</div>