<div class=' p-5 pb-30'>
  <div class="pt-5">
    <div class='text-center mb-5'>
        <h1 class='text-2xl font-semibold mb-3 font-lilita'>新規投稿</h1>
    </div>
    <%= form_with model: @post do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class='mt-10 mb-6 flex flex-col items-center'>
          <%= f.label :genre, 'スポットのジャンル', class: 'label w-full lg:w-2/3 mb-2' %>
          <%= f.select :genre, Post.genres_i18n.invert.to_a, { include_blank: "未選択" },
                      class: "form-input #{'border-red-500' if f.object.errors[:genre].present?}  bg-card-body bg-base-100 rounded-md border border-accent py-2 px-3 w-full lg:w-2/3" %>
        </div>
        
        <div class='mb-6 flex flex-col items-center'>
          <%= f.label :location_name, class: 'label w-full lg:w-2/3 mb-2' %>
          <%= f.text_field :location_name, class: "form-input #{'border-red-500' if f.object.errors[:location_name].present?} bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block py-3 px-4 w-full lg:w-2/3", placeholder: 'スポットの名前を入力してください' %>
        </div>
        
        <div class='mb-6 flex flex-col items-center'>
          <%= f.label :address, class: 'label w-full lg:w-2/3 mb-2' %>
          <%= f.text_field :address, class: "form-input #{'border-red-500' if f.object.errors[:address].present?}  bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block py-3 px-4 w-full lg:w-2/3", placeholder: '住所を入力してください' %>
        </div>

        <div class='mb-6 flex flex-col items-center'>
          <div class="grid grid-cols-2 gap-2 w-full lg:w-2/3">
            <div class="flex flex-col w-1/2">
              <%= f.label :start_hour, '開始時間', class: 'label mb-2' %>
              <%= f.select :start_hour, (0..23).to_a.map { |h| ["#{h}時", h] }, { include_blank: "選択してください" }, class: 'bg-card-body bg-base-100 rounded-md border border-accent py-2 px-3' %>
            </div>

            <div class="flex flex-col w-1/2">
              <%= f.label :start_minute, '開始分', class: 'label mb-2' %>
              <%= f.select :start_minute, [['00分', 0], ["30分",30]], { include_blank: "選択してください" }, class: 'bg-card-body bg-base-100 rounded-md border border-accent py-2 px-3' %>
            </div>

            <div class="flex flex-col w-1/2">
              <%= f.label :end_hour, '終了時間', class: 'label mb-2' %>
              <%= f.select :end_hour, (0..23).to_a.map { |h| ["#{h}時", h] }, { include_blank: "選択してください" }, class: 'bg-card-body bg-base-100 rounded-md border border-accent py-2 px-3' %>
            </div>

            <div class="flex flex-col w-1/2">
              <%= f.label :end_minute, '終了分', class: 'label mb-2' %>
              <%= f.select :end_minute, [["00分",0], ["30分",30]], { include_blank: "選択してください" }, class: 'bg-card-body bg-base-100 rounded-md border border-accent py-2 px-3' %>
            </div>
          </div>
        </div>

        <div class='mb-6 flex flex-col items-center'>
          <%= f.label :wifi, 'Wi-Fi', class: 'label w-full lg:w-2/3 mb-2' %>
          <%= f.select :wifi, Post.wifis_i18n.invert.to_a, { include_blank: "未選択" },
                    class: 'bg-card-body bg-base-100 rounded-md border border-accent py-2 px-3 w-full lg:w-2/3' %>
        </div>

        <div class='mb-6 flex flex-col items-center'>
          <%= f.label :electricity, '電源', class: 'label w-full lg:w-2/3 mb-2' %>
          <%= f.select :electricity, Post.electricities_i18n.invert.to_a, { include_blank: "未選択" },
                  class: 'bg-card-body bg-base-100 rounded-md border border-accent py-2 px-3 w-full lg:w-2/3' %>
        </div>

        <div class='mb-6 flex flex-col items-center'>
          <%= f.label :site_url, class: 'label w-full lg:w-2/3 mb-2' %>
          <%= f.text_field :site_url, class: 'bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block py-3 px-4 w-full lg:w-2/3', placeholder: 'スポットの名前を入力してください' %>
        </div>
        
        <div class='mb-6 flex flex-col items-center'>
          <%= f.label :description, class: 'label w-full lg:w-2/3 mb-2' %>
          <%= f.text_area :description, class: "form-input #{'border-red-500' if f.object.errors[:description].present?}  bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block py-3 px-4 w-full lg:w-2/3", rows: 5, placeholder: 'サイトがあれば教えてください' %>
        </div>

        <div class='mb-6 flex flex-col items-center'>
          <%= f.label :quiet_level, '静かさレベル', class: 'label w-full lg:w-2/3 mb-2' %>
          <%= f.select :quiet_level, Post.quiet_levels_i18n.invert.to_a, { include_blank: "未選択" },
                  class: "form-input #{'border-red-500' if f.object.errors[:location_name].present?}  bg-card-body bg-base-100 rounded-md border border-accent py-2 px-3 w-full lg:w-2/3" %>
        </div>

        <div class="mt-8 mb-20 text-center">
        <%= f.submit '投稿する', class: "bg-button hover:bg-green-700 text-white rounded px-5 py-3 mr-3" %>
         <p class="text-gray-800 text-sm mt-8 text-center">
          <%= link_to t('.to_register_page'),new_user_path , class: "text-blue-500 hover:underline ml-1" %>
        <p>
        </div>

      <% end %> 
    </div>
</div>

