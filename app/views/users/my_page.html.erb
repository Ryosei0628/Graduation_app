<div class="w-5/6 mx-auto max-w-md">
    <div class="mt-6">
        <div class="card border-2">
            <div class="m-4">

                <div class="flex items-center space-x-4">
                    <%# ユーザー画像 %>
                    <%= image_tag @user.avatar_url, class: "h-20 w-20 rounded-full object-cover" %>

                    <div class="flex flex-col items-start">
                        <%# 会員ID %>
                        <div class="flex items-center">
                            <span class="text-sm break-all">
                                <%= t('.user_id') %>
                                <%= @user.id %>
                            </span>
                        </div>

                        <%# ユーザー名 %>
                        <div class="flex items-center mt-4">
                            <%= image_tag 'user_name.svg', class: "h-5 w-5 mr-2" %>
                            <span class="text-base font-bold break-all">
                                <%= @user.name %>
                            </span>
                        </div>

                        <%# メール %>
                        <div class="flex items-center mt-2">
                            <%= image_tag 'email.svg', class: "h-5 w-5 mr-2" %>
                            <span class="text-base font-bold break-all">
                                <%= @user.email %>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- 退会リンク・施設詳細へのリンク -->
                <div class="mt-4 flex justify-between">
                    <%= link_to t('.to_destroy'), profile_path, data: { turbo_method: "delete", turbo_confirm: t('turbo_stream.delete.profile.confirm') }, class: "btn" %>
                    <%= link_to t('.to_edit'), edit_profile_path, data: { turbo: false }, class: "btn" %>
                </div>

            </div>
        </div>
    </div>
</div>